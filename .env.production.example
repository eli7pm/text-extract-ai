# Production Environment Variables for Docker Compose
# Copy this to .env.production and fill in your values

# PostgreSQL password (change this!)
POSTGRES_PASSWORD=your_secure_password_here

# API Auth Token for Document Engine (change this!)
API_AUTH_TOKEN=your_secret_token_here

# Anthropic API Key (get from https://console.anthropic.com/)
ANTHROPIC_API_KEY=sk-ant-api03-your-key-here

# Dashboard settings (disable in production for security)
DASHBOARD_ENABLED=false
DASHBOARD_USERNAME=admin
DASHBOARD_PASSWORD=secure_password_here

# CORS - Set to your GitHub Pages URL
# Example: https://yourusername.github.io,https://yourdomain.com
ALLOWED_ORIGINS=*
